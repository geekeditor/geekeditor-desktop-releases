{
    "name": "geekeditor",
    "version": "0.7.12",
    "description": "Immersive efficiency writing editor",
    "main": "main/dist/index.js",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "pack:mac": "cross-env npm_config_electron_mirror=\"https://npm.taobao.org/mirrors/electron/\" electron-builder --mac",
        "pack:win": "npm run build && electron-builder --win --ia32"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/geekeditor/geekeditor-releases.git"
    },
    "author": "montisan",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/geekeditor/geekeditor-releases/issues"
    },
    "homepage": "https://github.com/geekeditor/geekeditor-releases#readme",
    "build": {
        "appId": "com.montisan.geekeditor",
        "productName": "GeekEditor",
        "files": [
            "renderer/pages",
            "main/dist"
        ],
        "asar": true,
        "extraFiles": [],
        "directories": {
            "buildResources": "",
            "output": "release"
        },
        "copyright": "Copyright Â© 2021 Montisan",
        "mac": {
            "target": [
                "dmg",
                "zip"
            ],
            "icon": "resource/icon.icns"
        },
        "dmg": {
            "window": {
                "width": 540,
                "height": 380
            },
            "iconSize": 128
        },
        "win": {
            "icon": "resource/icon.ico",
            "target": ["nsis"]
        },
        "nsis": {
            "oneClick": false,
            "language": "2052",
            "perMachine": true,
            "allowToChangeInstallationDirectory": true
        },
        "squirrelWindows": {}
    },
    "dependencies": {
        "electron-is-dev": "^1.2.0"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^4.13.0",
        "@typescript-eslint/parser": "^4.13.0",
        "concurrently": "^5.3.0",
        "cross-env": "^7.0.3",
        "electron": "11.2.0",
        "electron-builder": "^22.10.5",
        "eslint": "^7.17.0",
        "typescript": "^4.1.3",
        "wait-on": "^5.2.1"
    }
}
